@{
    Layout = "~/Views/Shared/AdminSayfalari.cshtml";
}

@model DepoYonetimSistemi.Models.Kullanici

<form method="post" action="/Kullanici/KullaniciDuzenleVeritaban">
    <input type="text" id="ad" name="Isim" placeholder="Kullanıcı Adı" value="@Model.Isim"><br><br>

    <input type="text" id="soyad" name="Soyisim" placeholder="Şifre" value="@Model.Soyisim"><br><br>

    <input type="text" id="eposta" name="Mail" placeholder="E-Posta" value="@Model.Mail"><br><br>

    <select id="users" name="RolAdi">
        <option value="1" @(Model.Rol.RolAdi == "Misafir" ? "selected" : "")>Misafir</option>
        <option value="2" @(Model.Rol.RolAdi == "Satıcı" ? "selected" : "")>Satıcı</option>
        <option value="3" @(Model.Rol.RolAdi == "Admin" ? "selected" : "")>Admin</option>
    </select><br><br>

    <button type="submit">DEĞİŞTİR</button>
</form>

<form method="post" action="/Kullanici/KullaniciSil">
    <input type="hidden" name="id" value="@Model.ID" />
    <button type="submit">SİL</button>
</form>

