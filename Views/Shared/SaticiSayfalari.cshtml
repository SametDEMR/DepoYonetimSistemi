<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/sayfalar.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>


                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AnaMenü", "Genel")">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SatisSayfasi", "Satici")">SATIŞ EKRANI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SatislarimSayfasi", "Satici")">SATIŞLARIM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UrunTalebiSayfasi", "Satici")">ÜRÜN TALEBİ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("UrunTaleplerimSayfasi", "Satici")">TALEPLERİM</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <button type="button" onclick="logout(event)">ÇIKIŞ YAP</button>

                            <script>
                                function logout(event) {
                                    event.preventDefault(); // Varsayılan bağlantı davranışını engelle

                                    fetch('/Genel/Cikis', {
                                        method: 'POST' // Ya da GET kullanabilirsin, Controller'a göre ayarla
                                    })
                                        .then(response => {
                                            if (response.redirected) {
                                                window.location.href = response.url; // Yönlendirme varsa
                                            } else if (response.ok) {
                                                // Eğer yönlendirme yok ama başarılı bir yanıt döndüyse
                                                console.log('Çıkış başarılı');
                                            } else {
                                                console.error('Çıkış işlemi başarısız:', response.status);
                                            }
                                        })
                                        .catch(error => console.error('Çıkış işlemi başarısız:', error));
                                }
                            </script>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
