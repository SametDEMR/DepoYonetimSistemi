@model IEnumerable<DepoYonetimSistemi.Models.Urun>

<div class="urunler-listesi">
    <h3>Ürünler</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Ürün ID</th>
                <th>Ürün Adı</th>
                <th>Ürün Fiyatı</th>
                <th>Stok Durumu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var urun in Model)
            {
                <tr>
                    <td>@urun.ID</td>
                    <td>@urun.Ad</td>
                    <td>@urun.Fiyat</td>
                    <td>@urun.StokDurumu</td>
                </tr>
            }
        </tbody>
    </table>
</div>
